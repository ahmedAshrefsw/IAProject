@model IAProject.ModelView.ProductCategory

@{
    ViewBag.Title = "Details";
}


<div>
    <dl class="dl-horizontal">
    </dl>
    <div class="card">
        <div class="card-body">
            <h2 class="card-title" style="text-align-last:center">@Model.MyProduct.Name - @Model.MyProduct.Price {@Model.MyCategory.Name }</h2>
            <hr />
        </div>
        <img class="card-img-bottom" src="@Model.MyProduct.Image" alt="Card image cap">
        <hr />
        <div class="card-body">
            <p class="card-text">@Model.MyProduct.Description</p>
        </div>
    </div>
</div>
<p>
    <div class="btn-group btn-group-justified">

        @Html.ActionLink("Update", "Update", new { id = Model.MyProduct.Id }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Delete", "Delete", new { id = Model.MyProduct.Id }, new { @class = "btn btn-danger" })

    </div>

</p>

